<Window x:Class="WpfApp10.InfoWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp10"
        mc:Ignorable="d"
        Title="InfoWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <Label>Model</Label>
            <TextBox FontSize="26" Text="{Binding Car.Model,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ></TextBox>
            <Label>Vendor</Label>
            <TextBox FontSize="26" Text="{Binding Car.Vendor,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ></TextBox>
            <Label>Year</Label>
            <TextBox FontSize="26" Text="{Binding Car.Year,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ></TextBox>
        </StackPanel>
    </Grid>
</Window>
